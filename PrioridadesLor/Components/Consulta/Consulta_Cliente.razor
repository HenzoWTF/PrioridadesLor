@page "/Consulta_Cliente"

@rendermode InteractiveServer
@inject ClientesServices clientesServices
@inject NavigationManager navigationManager

<PageTitle>Consulta de Clientes</PageTitle>

<h1>Consulta de Clientes</h1>


<div>
    <a href="/Cliente">Crear Cliente</a>
</div>

<table class="table">
    @*Cabecera de la tabla cliente*@
    <thead class="table-primary">
        <tr bgcolor="skyblue">
            <th> Id Cliente</th>
            <th>Nombre</th>
            <th>Telefono</th>
            <th>Celular</th>
            <th>RNC</th>
            <th>Email</th>
            <th>Direcci&oacuten</th>
        </tr>
    </thead>

    <tbody class="table-sm">

        @if (clientes.Count == 0)
        {
            @: No existe registros
        }
        else
        {

            @*Cuerpo de la tabla*@
            @foreach (var Clientes in clientes)
            {
                <tr>
                    <td>@Clientes.ClientesID</td>
                    <td>@Clientes.NombreCliente</td>
                    <td>@Clientes.TelefonoCliente</td>
                    <td>@Clientes.CelularCliente</td>
                    <td>@Clientes.RNC</td>
                    <td>@Clientes.EmailCliente</td>
                    <td>@Clientes.DireccionCliente</td>
                    <td>
                        <a href="/Cliente/@Clientes.ClientesID"><i class="bi bi-pencil-square" /></a>
                        <a href="/Eliminar_CLiente/@Clientes.ClientesID" class="link-danger"><i class="bi bi-trash" /></a>
                    </td>
                </tr>

            }
        }
    </tbody>
</table>


@code {
    public List<Cliente> clientes { get; set; } = new List<Cliente>();
    public Cliente ClientesC { get; set; } = new Cliente();

    protected override async Task OnInitializedAsync()
    {
        clientes = await clientesServices.Listar(c => true);
    }

    public async void Buscar()
    {
        var clienteEncontrado = await clientesServices.Buscar(ClientesC.ClientesID);
        if (clienteEncontrado != null)
            ClientesC = clienteEncontrado;
        else
        {
            Nuevo();
        }
    }

    public void Nuevo()
    {
        ClientesC = new Cliente();
    }
}